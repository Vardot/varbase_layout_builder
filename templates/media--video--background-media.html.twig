{% set background_media_video_attributes = create_attribute() %}
{% 
  set background_media_video_classes = [
    'bg'
  ]
%}

{% set background_media_video_attributes = background_media_video_attributes.addClass(background_media_video_classes) %}

{% set background_media_video_attributes = background_media_video_attributes.setAttribute('controls', false) %}
{% set background_media_video_attributes = background_media_video_attributes.setAttribute('autoplay', 'autoplay') %}
{% set background_media_video_attributes = background_media_video_attributes.setAttribute('loop', 'loop') %}
{% set background_media_video_attributes = background_media_video_attributes.setAttribute('muted', 'muted') %}
{% set background_media_video_attributes = background_media_video_attributes.setAttribute('width', 1600) %}
{% set background_media_video_attributes = background_media_video_attributes.setAttribute('height', 900) %}

<video{{ background_media_video_attributes }}>
  <source src="{{ background_media_video_url }}" type="{{ background_media_video_type }}">
</video>
