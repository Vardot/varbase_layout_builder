{#
/**
 * @file
 * Default theme implementation to display an oEmbed resource in an iframe.
 *
 * @ingroup themeable
 */
#}
<!DOCTYPE html>
<html>
  <head>
    <style>
      body {
        display: flex;
      }

      iframe {
        align-items: stretch;
        position: absolute;
        left: 0;
        top: 0;
        right: 0;
        bottom: 0;
        width: 250vw;
        height: 200vh;
        top: 50%;
        left: 50%;
        -webkit-transform: translateY(-50%) translateX(-50%);
        -o-transform: translateY(-50%) translateX(-50%);
        transform: translateY(-50%) translateX(-50%);
        margin: 0;
        padding: 0;
        overflow: hidden;
        pointer-events: none;
      }

      @media (max-aspect-ratio: 16 / 9) {
        iframe {
          position: absolute;
          width: 650vw;
          height: 250vh;
          top: 50%;
          left: 50%;
          -webkit-transform: translateY(-50%) translateX(-50%);
          -o-transform: translateY(-50%) translateX(-50%);
          transform: translateY(-50%) translateX(-50%);
          margin: 0;
          padding: 0;
          overflow: hidden;
        }
      }
      
      @media (min-width: 1920px) {
        iframe {
          width: 1200vw;
          height: 1200vh;
        }
      }
      
      @media (min-width: 3840px) {
        iframe {
          width: 2800vw;
          height: 1800vh;
        }
      }
    </style>
    <script src="{{ base_path }}{{ varbase_layout_builder_path }}/js/oembed-frame.vlb-background-media.{{ provider }}.js"></script>
  </head>
  <body style="margin: 0">
    {{ media|raw }}
  </body>
</html>
