                '#selection_mode' => $style_option['settings']['selection_mode'],
                '#field_widget_display_settings' => [
                  'view_mode' => $style_option['settings']['field_widget_display_settings']['view_mode'],
                ],
                '#default_value' => $default_value,
                '#widget_context' => [
