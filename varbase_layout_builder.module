            '#type' => 'textfield',
            '#title' => $style_option['label'],
            '#description' => (isset($style_option['description']) ? $style_option['description'] : NULL),
            '#default_value' => $default_value,
            '#size' => $style_option['size'],
            '#maxlength' => $style_option['maxlength'],
